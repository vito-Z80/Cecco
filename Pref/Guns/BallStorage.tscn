export (PackedScene) var explosion
export (PackedScene) var balls
var b:Area2D
signal destroy
var is_radius_change = false

func _ready():
	b = balls.instance()
	b.position.x = 16
	b.position.y = 16
	add_child(b)

func _physics_process(delta):
	if is_radius_change && b.get_child_count() <= 1:
		print(\"full destroyyyyyyyyyyyyyy\")
		queue_free()

func _on_BallStorage_destroy():
	var e = explosion.instance()
	var x = position.x + $CollisionShape2D.shape.extents.x
	var y = position.y + $CollisionShape2D.shape.extents.y * 2
	e.start(x,y)
	get_parent().add_child(e)
	$Sprite.queue_free()
	$CollisionShape2D.queue_free()
	b.emit_signal(\"change_radius\", 96)
	is_radius_change = true
