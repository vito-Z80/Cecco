script/source = "extends Area2D

var start_y = 0
var state = STATE.LAUNCH
enum STATE{
	UP,WAIT,DOWN,LAUNCH
}

func _ready():
	start_y = position.y

func _on_Bak_body_entered(body):
	if body.name == \"Hero\":
		body.is_damage = true


var wait_time = 0.5
func _physics_process(delta):
	match state:
		STATE.UP:
			position.y -= 4
			if position.y <= start_y - 32:
				state = STATE.WAIT
		STATE.DOWN:
			position.y += 4
			if position.y == start_y:
				state = STATE.LAUNCH
		STATE.WAIT:
			wait_time -= delta
			if wait_time < 0:
				state = STATE.DOWN
				wait_time = 0.5
			pass
		STATE.LAUNCH:
			if randi() % 100 != 1: return
			state = STATE.UP
"

