script/source = "extends Area2D

var can_launch = false
export (PackedScene) var enemy_ball
onready var balls = g.e_balls as Array
const LAUNCH_TIME = 1
var time = 0
var direction = 0

func _physics_process(delta):
	if can_launch:
		time += delta
		launch_ball()

func launch_ball():
	if time < LAUNCH_TIME: return
	time = 0
	direction = 1 if position.x < g.hero_position.x else -1
	if balls.empty():
		create_new_enemy()
	else:
		init_enemy()
		
func create_new_enemy():
	var e = enemy_ball.instance()
	
	e.emit_signal(\"launch\", g.hero_position.y + 4,direction)
	balls.append(e)
	add_child(e)

func init_enemy():
	for e in balls:
		if not e.visible:
			e.emit_signal(\"launch\", g.hero_position.y + 4, direction)
			return
	create_new_enemy()


func _on_Area2D_body_entered(body):
	if body.name == \"Hero\":
		can_launch = false
func _on_Area2D_body_exited(body):
	if body.name == \"Hero\":
		can_launch = true

func _on_VisibilityNotifier2D_screen_entered():
	can_launch = true
func _on_VisibilityNotifier2D_screen_exited():
	can_launch = false
"

